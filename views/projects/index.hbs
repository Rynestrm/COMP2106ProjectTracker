<h1>{{title}}</h1>
<a href="/projects/add">Add a New Project</a>

<table class="table table-striped table-hover">
   <thead>
      <th><a href="/projects/edit{{this._id}}">{{this.name}}</a></th>
      <th>Due Date</th>
      <th>Course</th>
      <th>Status</th>
      <th>Actions</th>
      {{#each projects}}
      <tr>
         <td>{{this.name}}</td>
         <td>{{this.dueDate}}</td>
         <td>{{this.course}}</td>
         <td>{{this.status}}</td>
         <td><a class="btn btn-danger" href="/courses/delete/{{this._id}}" onclick="return areYouSure();">Delete</a>
         </td>
      </tr>
      {{/each}}
   </thead>
</table>